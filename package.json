{
  "name": "atlas-widget",
  "version": "1.0.0",
  "description": "ATLAS IT Support Widget - Submit tickets with device context",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "npm run build:electron && electron .",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:full": "tsc && vite build && tsc -p tsconfig.electron.json",
    "electron:build:win": "npm run build:full && electron-builder --win",
    "electron:build:mac": "npm run build:full && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "support",
    "widget",
    "ninjaone"
  ],
  "author": "Alphora",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.alphora.atlas-widget",
    "productName": "ATLAS Support",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true
    }
  }
}