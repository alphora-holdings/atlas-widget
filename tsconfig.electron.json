{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist-electron",
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "electron/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}